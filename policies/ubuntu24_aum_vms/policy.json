{
  "name": "CppUbuntu24AumVMs",
  "properties": {
    "description": "Configure periodic checking for missing system updates on Linux Azure VMs Ubuntu 24.04",
    "displayName": "Configure Azure Update Manager for Ubuntu 24.04 LTS VMs Only",
    "metadata": {
      "category": "Update Management",
      "version": "1.0.3"
    },
    "mode": "Indexed",
    "parameters": {
      "assessmentMode": {
        "allowedValues": [
          "AutomaticByPlatform"
        ],
        "defaultValue": "AutomaticByPlatform",
        "metadata": {
          "description": "Assessment mode for Ubuntu 24.x VMs",
          "displayName": "Assessment Mode"
        },
        "type": "String"
      },
      "effect": {
        "allowedValues": [
          "DeployIfNotExists",
          "Audit"
        ],
        "defaultValue": "DeployIfNotExists",
        "metadata": {
          "description": "Enable, disable, or audit the execution of the policy",
          "displayName": "Effect"
        },
        "type": "String"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Compute/virtualMachines"
          },
          {
            "field": "Microsoft.Compute/virtualMachines/storageProfile.imageReference.publisher",
            "in": [
              "Canonical",
              "canonical"
            ]
          },
          {
            "anyOf": [
              {
                "field": "Microsoft.Compute/virtualMachines/storageProfile.imageReference.offer",
                "equals": "ubuntu-24_04-lts"
              },
              {
                "field": "Microsoft.Compute/virtualMachines/storageProfile.imageReference.offer",
                "equals": "0001-com-ubuntu-server-noble"
              },
              {
                "field": "Microsoft.Compute/virtualMachines/storageProfile.imageReference.offer",
                "equals": "0001-com-ubuntu-pro-noble"
              },
              {
                "field": "Microsoft.Compute/virtualMachines/storageProfile.imageReference.offer",
                "equals": "ubuntu-24_10"
              },
              {
                "field": "Microsoft.Compute/virtualMachines/storageProfile.imageReference.offer",
                "equals": "0001-com-ubuntu-server-oracular"
              },
              {
                "field": "Microsoft.Compute/virtualMachines/storageProfile.imageReference.offer",
                "equals": "ubuntu-22_04-lts"
              },
              {
                "field": "Microsoft.Compute/virtualMachines/storageProfile.imageReference.offer",
                "equals": "0001-com-ubuntu-server-jammy"
              },
              {
                "field": "Microsoft.Compute/virtualMachines/storageProfile.imageReference.offer",
                "equals": "0001-com-ubuntu-pro-jammy"
              },
              {
                "field": "Microsoft.Compute/virtualMachines/storageProfile.imageReference.offer",
                "equals": "ubuntu-20_04-lts"
              },
              {
                "field": "Microsoft.Compute/virtualMachines/storageProfile.imageReference.offer",
                "equals": "0001-com-ubuntu-server-focal"
              },
              {
                "field": "Microsoft.Compute/virtualMachines/storageProfile.imageReference.offer",
                "equals": "0001-com-ubuntu-pro-focal"
              }
            ]
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {
          "type": "Microsoft.Compute/virtualMachines",
          "roleDefinitionIds": [
            "/providers/microsoft.authorization/roleDefinitions/9980e02c-c2be-4d73-94e8-173b1dc7cf3c"
          ],
          "existenceCondition": {
            "field": "Microsoft.Compute/virtualMachines/osProfile.linuxConfiguration.patchSettings.assessmentMode",
            "equals": "[parameters('assessmentMode')]"
          },
          "deployment": {
            "properties": {
              "mode": "incremental",
              "template": {
                "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                "contentVersion": "1.0.0.0",
                "parameters": {
                  "vmName": {
                    "type": "string"
                  },
                  "location": {
                    "type": "string"
                  },
                  "assessmentMode": {
                    "type": "string"
                  }
                },
                "resources": [
                  {
                    "type": "Microsoft.Compute/virtualMachines",
                    "apiVersion": "2023-09-01",
                    "name": "[parameters('vmName')]",
                    "location": "[parameters('location')]",
                    "properties": {
                      "osProfile": {
                        "linuxConfiguration": {
                          "patchSettings": {
                            "assessmentMode": "[parameters('assessmentMode')]",
                            "automaticByPlatformSettings": {
                              "rebootSetting": "IfRequired"
                            }
                          }
                        }
                      }
                    }
                  }
                ]
              },
              "parameters": {
                "vmName": {
                  "value": "[field('name')]"
                },
                "location": {
                  "value": "[field('location')]"
                },
                "assessmentMode": {
                  "value": "[parameters('assessmentMode')]"
                }
              }
            }
          }
        }
      }
    },
    "policyType": "Custom"
  }
}
