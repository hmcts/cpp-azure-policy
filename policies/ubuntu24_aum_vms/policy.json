{
  "id": "/providers/Microsoft.Management/managementGroups/e2995d11-9947-4e78-9de6-d44e0603518e/providers/Microsoft.Authorization/policyDefinitions/CppUbuntu24AumVMs",
  "name": "CppUbuntu24AumVMs",
  "properties": {
    "description": "Configure periodic checking for missing system updates on Linux Azure VMs Ubuntu 24.x",
    "displayName": "Configure Azure Update Manager for Ubuntu 24.x for VMs only",
    "metadata": {
      "category": "Update Management",
      "version": "1.0.5"
    },
    "mode": "Indexed",
    "parameters": {
      "assessmentMode": {
        "allowedValues": [
          "AutomaticByPlatform"
        ],
        "defaultValue": "AutomaticByPlatform",
        "metadata": {
          "description": "Assessment mode for Ubuntu 24.x VMs",
          "displayName": "Assessment Mode"
        },
        "type": "String"
      },
      "effect": {
        "allowedValues": [
          "DeployIfNotExists"
        ],
        "defaultValue": "DeployIfNotExists",
        "metadata": {
          "description": "Enable the execution of the policy",
          "displayName": "Effect"
        },
        "type": "String"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "equals": "Microsoft.Compute/virtualMachines",
            "field": "type"
          },
          {
            "anyOf": [
              {
                "allOf": [
                  {
                    "field": "Microsoft.Compute/virtualMachines/storageProfile.imageReference.publisher",
                    "in": [
                      "Canonical",
                      "canonical"
                    ]
                  },
                  {
                    "anyOf": [
                      {
                        "equals": "ubuntu-24_04-lts",
                        "field": "Microsoft.Compute/virtualMachines/storageProfile.imageReference.offer"
                      },
                      {
                        "equals": "0001-com-ubuntu-server-noble",
                        "field": "Microsoft.Compute/virtualMachines/storageProfile.imageReference.offer"
                      },
                      {
                        "equals": "0001-com-ubuntu-pro-noble",
                        "field": "Microsoft.Compute/virtualMachines/storageProfile.imageReference.offer"
                      },
                      {
                        "equals": "ubuntu-24_10",
                        "field": "Microsoft.Compute/virtualMachines/storageProfile.imageReference.offer"
                      },
                      {
                        "equals": "0001-com-ubuntu-server-oracular",
                        "field": "Microsoft.Compute/virtualMachines/storageProfile.imageReference.offer"
                      }
                    ]
                  }
                ]
              },
              {
                "anyOf": [
                  {
                    "contains": "artemis_2_18_j11",
                    "field": "Microsoft.Compute/virtualMachines/storageProfile.imageReference.id"
                  },
                  {
                    "contains": "artemis_ubuntu_24_image",
                    "field": "Microsoft.Compute/virtualMachines/storageProfile.imageReference.id"
                  },
                  {
                    "contains": "ubuntu_24_image",
                    "field": "Microsoft.Compute/virtualMachines/storageProfile.imageReference.id"
                  }
                ]
              }
            ]
          }
        ]
      },
      "then": {
        "details": {
          "deployment": {
            "properties": {
              "mode": "incremental",
              "parameters": {
                "assessmentMode": {
                  "value": "[parameters('assessmentMode')]"
                },
                "location": {
                  "value": "[field('location')]"
                },
                "vmName": {
                  "value": "[field('name')]"
                }
              },
              "template": {
                "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                "contentVersion": "1.0.0.0",
                "parameters": {
                  "assessmentMode": {
                    "type": "string"
                  },
                  "location": {
                    "type": "string"
                  },
                  "vmName": {
                    "type": "string"
                  }
                },
                "resources": [
                  {
                    "apiVersion": "2024-03-01",
                    "location": "[parameters('location')]",
                    "name": "[parameters('vmName')]",
                    "properties": {
                      "osProfile": {
                        "linuxConfiguration": {
                          "patchSettings": {
                            "assessmentMode": "[parameters('assessmentMode')]",
                            "automaticByPlatformSettings": {
                              "rebootSetting": "IfRequired"
                            },
                            "patchMode": "AutomaticByPlatform"
                          }
                        }
                      }
                    },
                    "type": "Microsoft.Compute/virtualMachines"
                  }
                ]
              }
            }
          },
          "existenceCondition": {
            "equals": "[parameters('assessmentMode')]",
            "field": "Microsoft.Compute/virtualMachines/osProfile.linuxConfiguration.patchSettings.assessmentMode"
          },
          "roleDefinitionIds": [
            "/providers/microsoft.authorization/roleDefinitions/9980e02c-c2be-4d73-94e8-173b1dc7cf3c"
          ],
          "type": "Microsoft.Compute/virtualMachines"
        },
        "effect": "[parameters('effect')]"
      }
    },
    "policyType": "Custom"
  }
}
