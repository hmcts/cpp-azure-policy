{
  "id": "/providers/Microsoft.Management/managementGroups/e2995d11-9947-4e78-9de6-d44e0603518e/providers/Microsoft.Authorization/policyDefinitions/CppIPSkuSize",
  "name": "CppIPSkuSize",
  "properties": {
    "description": "Prevent the creation of Basic SKU Public IP addresses in CPP",
    "displayName": "This policy enables you to specify a set of Public IP addresses SKUs sizes that can be deployed in CPP",
    "mode": "Indexed",
    "parameters": {
      "allowedSKUs": {
        "allowedValues": [
          "Standard"
        ],
        "defaultValue": [
          "Standard"
        ],
        "metadata": {
          "description": "The allowed Public IP Address SKU types in CPP",
          "displayName": "Allowed Public IP Address SKU Types"
        },
        "type": "Array"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "equals": "Microsoft.Network/publicIPAddresses",
            "field": "type"
          },
          {
            "field": "Microsoft.Network/publicIPAddresses/sku.name",
            "notIn": "[parameters('allowedSKUs')]"
          }
        ]
      },
      "then": {
        "effect": "Deny"
      }
    },
    "policyType": "Custom"
  },
  "type": "Microsoft.Authorization/policyDefinitions"
}
