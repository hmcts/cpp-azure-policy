{
  "id": "/providers/Microsoft.Management/managementGroups/e2995d11-9947-4e78-9de6-d44e0603518e/providers/Microsoft.Authorization/policyDefinitions/HMCTSVmSkuSize",
  "name": "HMCTSVmSkuSize",
  "properties": {
    "description": "Restrict the Virtual Machine SKU sizes that can be deployed in HMCTS",
    "displayName": "This policy enables you to specify a set of virtual machine SKUs sizes that can be deployed in HMCTS",
    "mode": "Indexed",
    "parameters": {
      "allowedSKUs": {
        "allowedValues": [
          "Standard_B2ats_v2",
          "Standard_B2s",
          "Standard_D2_v3",
          "Standard_D2ds_v5",
          "Standard_D2s_v3",
          "Standard_D3_v2",
          "Standard_D4ds_v5",
          "Standard_D4s_v3",
          "Standard_D8_v3",
          "Standard_D8ds_v5",
          "Standard_DS1_v2",
          "Standard_DS2_v2",
          "Standard_DS4_v2",
          "Standard_E2s_v3",
          "Standard_E2s_v4",
          "Standard_E32-16s_v3",
          "Standard_E4-2s_v3",
          "Standard_E4as_v4",
          "Standard_E4ds_v5",
          "Standard_E4s_v3",
          "Standard_E4s_v4",
          "Standard_E8ds_v5",
          "Standard_E8s_v3",
          "Standard_F2s_v2"
        ],
        "defaultValue": [
          "Standard_B2ats_v2",
          "Standard_B2s",
          "Standard_D2_v3",
          "Standard_D2ds_v5",
          "Standard_D2s_v3",
          "Standard_D3_v2",
          "Standard_D4ds_v5",
          "Standard_D4s_v3",
          "Standard_D8_v3",
          "Standard_D8ds_v5",
          "Standard_DS1_v2",
          "Standard_DS2_v2",
          "Standard_DS4_v2",
          "Standard_E2s_v3",
          "Standard_E2s_v4",
          "Standard_E32-16s_v3",
          "Standard_E4-2s_v3",
          "Standard_E4as_v4",
          "Standard_E4ds_v5",
          "Standard_E4s_v3",
          "Standard_E4s_v4",
          "Standard_E8ds_v5",
          "Standard_E8s_v3",
          "Standard_F2s_v2"
        ],
        "metadata": {
          "description": "The allowed Virtual Machine SKU sizes in HMCTS",
          "displayName": "Allowed Virtual Machine SKU Sizes"
        },
        "type": "Array"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "equals": "Microsoft.Compute/virtualMachines",
            "field": "type"
          },
          {
            "field": "Microsoft.Compute/virtualMachines/sku.name",
            "notIn": "[parameters('allowedSKUs')]"
          }
        ]
      },
      "then": {
        "effect": "Deny"
      }
    },
    "policyType": "Custom"
  },
  "type": "Microsoft.Authorization/policyDefinitions"
}
