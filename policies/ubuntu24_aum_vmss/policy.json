{
  "id": "/providers/Microsoft.Management/managementGroups/e2995d11-9947-4e78-9de6-d44e0603518e/providers/Microsoft.Authorization/policyDefinitions/CppUbuntu24AumVMSS",
  "name": "CppUbuntu24AumVMSS",
  "properties": {
    "description": "Configure Ubuntu 24.x Uniform VMSS for Azure Update Manager In-Guest patching using maintenance schedules.",
    "displayName": "Ubuntu 24.x Uniform VMSS Maintenance Schedule Configuration",
    "metadata": {
      "category": "Update Management",
      "version": "1.0.2"
    },
    "mode": "Indexed",
    "parameters": {
      "assessmentMode": {
        "allowedValues": [
          "AutomaticByPlatform"
        ],
        "defaultValue": "AutomaticByPlatform",
        "metadata": {
          "description": "Assessment mode for Ubuntu 24.x Uniform VMSS",
          "displayName": "Assessment Mode"
        },
        "type": "String"
      },
      "bypassPlatformSafetyChecksOnUserSchedule": {
        "allowedValues": [
          true,
          false
        ],
        "defaultValue": true,
        "metadata": {
          "description": "Bypass platform safety checks on user schedule - required for Maintenance Control to honour schedule",
          "displayName": "Bypass Platform Safety Checks On User Schedule"
        },
        "type": "Boolean"
      },
      "effect": {
        "allowedValues": [
          "DeployIfNotExists",
          "Disabled"
        ],
        "defaultValue": "DeployIfNotExists",
        "metadata": {
          "description": "Enable or disable the execution of the policy",
          "displayName": "Effect"
        },
        "type": "String"
      },
      "patchMode": {
        "allowedValues": [
          "AutomaticByPlatform"
        ],
        "defaultValue": "AutomaticByPlatform",
        "metadata": {
          "description": "Patch mode for Ubuntu 24.x VMSS - required for maintenance schedules",
          "displayName": "Patch Mode"
        },
        "type": "String"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "equals": "Microsoft.Compute/virtualMachineScaleSets",
            "field": "type"
          },
          {
            "anyOf": [
              {
                "equals": "Uniform",
                "field": "Microsoft.Compute/virtualMachineScaleSets/orchestrationMode"
              },
              {
                "exists": "false",
                "field": "Microsoft.Compute/virtualMachineScaleSets/orchestrationMode"
              }
            ]
          },
          {
            "not": {
              "equals": "TrustedLaunch",
              "field": "Microsoft.Compute/virtualMachineScaleSets/virtualMachineProfile.securityProfile.securityType"
            }
          },
          {
            "anyOf": [
              {
                "allOf": [
                  {
                    "field": "Microsoft.Compute/virtualMachineScaleSets/virtualMachineProfile.storageProfile.imageReference.publisher",
                    "in": [
                      "Canonical",
                      "canonical"
                    ]
                  },
                  {
                    "anyOf": [
                      {
                        "equals": "ubuntu-24_04-lts",
                        "field": "Microsoft.Compute/virtualMachineScaleSets/virtualMachineProfile.storageProfile.imageReference.offer"
                      },
                      {
                        "equals": "0001-com-ubuntu-server-noble",
                        "field": "Microsoft.Compute/virtualMachineScaleSets/virtualMachineProfile.storageProfile.imageReference.offer"
                      },
                      {
                        "equals": "0001-com-ubuntu-pro-noble",
                        "field": "Microsoft.Compute/virtualMachineScaleSets/virtualMachineProfile.storageProfile.imageReference.offer"
                      },
                      {
                        "equals": "ubuntu-24_10",
                        "field": "Microsoft.Compute/virtualMachineScaleSets/virtualMachineProfile.storageProfile.imageReference.offer"
                      },
                      {
                        "equals": "0001-com-ubuntu-server-oracular",
                        "field": "Microsoft.Compute/virtualMachineScaleSets/virtualMachineProfile.storageProfile.imageReference.offer"
                      }
                    ]
                  }
                ]
              },
              {
                "anyOf": [
                  {
                    "contains": "artemis_2_18_j11",
                    "field": "Microsoft.Compute/virtualMachineScaleSets/virtualMachineProfile.storageProfile.imageReference.id"
                  },
                  {
                    "contains": "artemis_ubuntu_24_image",
                    "field": "Microsoft.Compute/virtualMachineScaleSets/virtualMachineProfile.storageProfile.imageReference.id"
                  },
                  {
                    "contains": "ubuntu_24_image",
                    "field": "Microsoft.Compute/virtualMachineScaleSets/virtualMachineProfile.storageProfile.imageReference.id"
                  },
                  {
                    "contains": "packer_shareimages/images/artemis_image",
                    "field": "Microsoft.Compute/virtualMachineScaleSets/virtualMachineProfile.storageProfile.imageReference.id"
                  }
                ]
              }
            ]
          }
        ]
      },
      "then": {
        "details": {
          "deployment": {
            "properties": {
              "mode": "incremental",
              "parameters": {
                "assessmentMode": {
                  "value": "[parameters('assessmentMode')]"
                },
                "bypassPlatformSafetyChecksOnUserSchedule": {
                  "value": "[parameters('bypassPlatformSafetyChecksOnUserSchedule')]"
                },
                "location": {
                  "value": "[field('location')]"
                },
                "patchMode": {
                  "value": "[parameters('patchMode')]"
                },
                "vmssName": {
                  "value": "[field('name')]"
                }
              },
              "template": {
                "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                "contentVersion": "1.0.0.0",
                "parameters": {
                  "assessmentMode": {
                    "type": "string"
                  },
                  "bypassPlatformSafetyChecksOnUserSchedule": {
                    "type": "boolean"
                  },
                  "location": {
                    "type": "string"
                  },
                  "patchMode": {
                    "type": "string"
                  },
                  "vmssName": {
                    "type": "string"
                  }
                },
                "resources": [
                  {
                    "apiVersion": "2024-03-01",
                    "location": "[parameters('location')]",
                    "name": "[parameters('vmssName')]",
                    "properties": {
                      "virtualMachineProfile": {
                        "osProfile": {
                          "linuxConfiguration": {
                            "patchSettings": {
                              "assessmentMode": "[parameters('assessmentMode')]",
                              "automaticByPlatformSettings": {
                                "bypassPlatformSafetyChecksOnUserSchedule": "[parameters('bypassPlatformSafetyChecksOnUserSchedule')]"
                              },
                              "patchMode": "[parameters('patchMode')]"
                            }
                          }
                        }
                      }
                    },
                    "type": "Microsoft.Compute/virtualMachineScaleSets"
                  }
                ]
              }
            }
          },
          "existenceCondition": {
            "allOf": [
              {
                "equals": "[parameters('patchMode')]",
                "field": "Microsoft.Compute/virtualMachineScaleSets/virtualMachineProfile.osProfile.linuxConfiguration.patchSettings.patchMode"
              },
              {
                "equals": "[parameters('assessmentMode')]",
                "field": "Microsoft.Compute/virtualMachineScaleSets/virtualMachineProfile.osProfile.linuxConfiguration.patchSettings.assessmentMode"
              },
              {
                "equals": "[parameters('bypassPlatformSafetyChecksOnUserSchedule')]",
                "field": "Microsoft.Compute/virtualMachineScaleSets/virtualMachineProfile.osProfile.linuxConfiguration.patchSettings.automaticByPlatformSettings.bypassPlatformSafetyChecksOnUserSchedule"
              }
            ]
          },
          "name": "[field('name')]",
          "roleDefinitionIds": [
            "/providers/microsoft.authorization/roleDefinitions/9980e02c-c2be-4d73-94e8-173b1dc7cf3c"
          ],
          "type": "Microsoft.Compute/virtualMachineScaleSets"
        },
        "effect": "[parameters('effect')]"
      }
    },
    "policyType": "Custom"
  }
}
