{
  "name": "CppUbuntu24AumVMSS",
  "properties": {
    "description": "Configure periodic checking for missing system updates on Linux Azure VMSS Ubuntu 24.04",
    "displayName": "Configure Azure Update Manager for Ubuntu 24.04 LTS VMSS Only",
    "metadata": {
      "category": "Update Management",
      "version": "1.0.1"
    },
    "mode": "Indexed",
    "parameters": {
      "assessmentMode": {
        "allowedValues": [
          "AutomaticByPlatform"
        ],
        "defaultValue": "AutomaticByPlatform",
        "metadata": {
          "description": "Assessment mode for Ubuntu 24.04 VMSS",
          "displayName": "Assessment Mode"
        },
        "type": "String"
      },
      "effect": {
        "allowedValues": [
          "DeployIfNotExists",
          "Disabled"
        ],
        "defaultValue": "DeployIfNotExists",
        "metadata": {
          "description": "Enable or disable the execution of the policy",
          "displayName": "Effect"
        },
        "type": "String"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "equals": "Microsoft.Compute/virtualMachineScaleSets",
            "field": "type"
          },
          {
            "equals": "canonical",
            "field": "Microsoft.Compute/virtualMachineScaleSets/virtualMachineProfile.storageProfile.imageReference.publisher"
          },
          {
            "field": "Microsoft.Compute/virtualMachineScaleSets/virtualMachineProfile.storageProfile.imageReference.offer",
            "in": [
              "ubuntu-24_04-lts",
              "0001-com-ubuntu-server-noble",
              "0001-com-ubuntu-pro-noble"
            ]
          }
        ]
      },
      "then": {
        "details": {
          "deployment": {
            "properties": {
              "mode": "incremental",
              "parameters": {
                "assessmentMode": {
                  "value": "[parameters('assessmentMode')]"
                },
                "location": {
                  "value": "[field('location')]"
                },
                "vmssName": {
                  "value": "[field('name')]"
                }
              },
              "template": {
                "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                "contentVersion": "1.0.0.0",
                "parameters": {
                  "assessmentMode": {
                    "type": "string"
                  },
                  "location": {
                    "type": "string"
                  },
                  "vmssName": {
                    "type": "string"
                  }
                },
                "resources": [
                  {
                    "apiVersion": "2023-09-01",
                    "location": "[parameters('location')]",
                    "name": "[parameters('vmssName')]",
                    "properties": {
                      "virtualMachineProfile": {
                        "osProfile": {
                          "linuxConfiguration": {
                            "patchSettings": {
                              "assessmentMode": "[parameters('assessmentMode')]",
                              "automaticByPlatformSettings": {
                                "rebootSetting": "IfRequired"
                              }
                            }
                          }
                        }
                      }
                    },
                    "type": "Microsoft.Compute/virtualMachineScaleSets"
                  }
                ]
              }
            }
          },
          "existenceCondition": {
            "equals": "[parameters('assessmentMode')]",
            "field": "Microsoft.Compute/virtualMachineScaleSets/virtualMachineProfile.osProfile.linuxConfiguration.patchSettings.assessmentMode"
          },
          "roleDefinitionIds": [
            "/providers/microsoft.authorization/roleDefinitions/9980e02c-c2be-4d73-94e8-173b1dc7cf3c"
          ],
          "type": "Microsoft.Compute/virtualMachineScaleSets"
        },
        "effect": "[parameters('effect')]"
      }
    }
  }
}
