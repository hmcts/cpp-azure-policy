{
  "id": "/providers/Microsoft.Management/managementGroups/e2995d11-9947-4e78-9de6-d44e0603518e/providers/Microsoft.Authorization/policyDefinitions/CppResourceLocationPolicy",
  "name": "CppResourceLocationPolicy",
  "properties": {
    "displayName": "CPP Resource Location Policy",
    "mode": "Indexed",
    "parameters": {
      "excludedResourceTypes": {
        "defaultValue": [
          "Microsoft.AzureActiveDirectory/b2cDirectories",
          "Microsoft.Cdn/profiles",
          "Microsoft.Cdn/profiles/endpoints",
          "Microsoft.Cdn/profiles",
          "microsoft.insights/scheduledqueryrules"
        ],
        "metadata": {
          "description": "Resource Types to exclude from compliance results",
          "displayName": "Resource Types to exclude"
        },
        "type": "Array"
      },
      "listOfAllowedLocations": {
        "defaultValue": [
          "uksouth",
          "global",
          "UK South"
        ],
        "metadata": {
          "description": "Permitted CPP Regions",
          "displayName": "Allowed Locations",
          "strongType": "location"
        },
        "type": "Array"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "notIn": "[parameters('excludedResourceTypes')]"
          },
          {
            "field": "location",
            "notIn": "[parameters('listOfAllowedLocations')]"
          }
        ]
      },
      "then": {
        "effect": "deny"
      }
    },
    "policyType": "Custom"
  },
  "type": "Microsoft.Authorization/policyDefinitions"
}
